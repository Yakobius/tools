document.addEventListener('DOMContentLoaded', function() {
    // Load navigation HTML
    fetch('/tools/nav.html')
        .then(response => response.text())
        .then(navData => {
            document.getElementById('nav-placeholder').innerHTML = navData;
            
            // Load conversion tools
            return fetch('/tools/conversions/tools.json');
        })
        .then(response => response.json())
        .then(tools => {
            const conversionLinks = document.getElementById('conversion-links');
            if (conversionLinks) {
                tools.forEach(tool => {
                    const link = document.createElement('a');
                    link.href = `/tools/conversions/${tool.file}`;
                    link.textContent = tool.title;
                    conversionLinks.appendChild(link);
                });
            }
        })
        .catch(error => console.error('Error loading navigation or tools:', error));
});
